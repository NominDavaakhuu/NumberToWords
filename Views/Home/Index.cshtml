@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">💬 Number to Words Converter</h1>
        <p class="lead text-muted">Convert numerical values into written currency format</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Convert" method="post">
                        <div class="form-group mb-3">
                            <input type="number" name="number" step="0.01" required class="form-control form-control-lg" placeholder="Enter a number (e.g. 1234.56)" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">🔁 Convert</button>
                        </div>
                    </form>
                </div>
            </div>

            @if (ViewBag.Words != null)
            {
                <div class="alert alert-success mt-4 text-center">
                    <strong>📝 In Words:</strong><br />
                    <span class="fs-5">@ViewBag.Words</span>
                </div>
            }
        </div>
    </div>

    <div class="mt-5 text-center">
        <h5 class="mb-3">🚀 Quick Test Cases</h5>
        <div class="d-flex flex-wrap justify-content-center gap-3">
            <form asp-action="Convert" method="post">
                <input type="hidden" name="number" value="1234.56" />
                <button type="submit" class="btn btn-outline-dark px-4">1234.56</button>
            </form>

            <form asp-action="Convert" method="post">
                <input type="hidden" name="number" value="1000000" />
                <button type="submit" class="btn btn-outline-dark px-4">1,000,000</button>
            </form>

            <form asp-action="Convert" method="post">
                <input type="hidden" name="number" value="0.99" />
                <button type="submit" class="btn btn-outline-dark px-4">0.99</button>
            </form>

            <form asp-action="Convert" method="post">
                <input type="hidden" name="number" value="0" />
                <button type="submit" class="btn btn-outline-dark px-4">0</button>
            </form>
        </div>
    </div>
</div>